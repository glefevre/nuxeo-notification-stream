<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.notification.test.dummy.config">

  <extension target="org.nuxeo.ecm.platform.notification.NotificationComponent" point="dispatcher">
    <dispatcher id="inApp" class="org.nuxeo.ecm.platform.notification.dispatcher.LogDispatcher" />
    <dispatcher id="log" class="org.nuxeo.ecm.platform.notification.dispatcher.LogDispatcher">
      <property name="my-secret-key">my-secret-value</property>
    </dispatcher>
  </extension>

  <extension target="org.nuxeo.ecm.platform.notification.NotificationComponent" point="resolver">
    <resolver id="fileCreated" class="org.nuxeo.ecm.platform.notification.resolver.FileCreatedResolver" order="0" />
    <resolver id="fileUpdated" class="org.nuxeo.ecm.platform.notification.resolver.FileUpdatedResolver" />
    <resolver id="complexKey" class="org.nuxeo.ecm.platform.notification.resolver.ComplexSubsKeyResolver" />
  </extension>

  <extension target="org.nuxeo.ecm.platform.notification.NotificationComponent" point="settings">
    <settings id="fileCreated">
      <dispatcher name="inApp" default="true" enable="true" />
      <dispatcher name="log" default="false" enable="true" />
    </settings>
    <settings id="fileUpdated">
      <dispatcher name="inApp" enable="false" />
      <dispatcher name="log" enable="false" />
    </settings>
  </extension>
</component>